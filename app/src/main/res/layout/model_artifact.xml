<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/transparent"
	android:backgroundTint="@color/transparent"
	android:id="@+id/model_artifact">

	<androidx.cardview.widget.CardView
		android:id="@+id/cardView"
		style="@style/ImageCardView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginVertical="24dp"
		android:layout_marginLeft="31dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageView
				android:id="@+id/artifact_set_image"
				style="@style/ImageMain"
				android:layout_width="120dp"
				android:layout_height="120dp"
				android:src="@drawable/ex_artifact"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<ImageView
				android:visibility="visible"
				android:id="@+id/artifact_set_image_shadow"
				style="@style/ImageMainShadow"
				android:layout_width="120dp"
				android:layout_height="120dp"
				android:src="@drawable/ex_artifact"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>

	<TextView
		android:id="@+id/artifact_set_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:text="Церемония древней знати"
		android:textAlignment="center"
		android:textColor="@color/text_main"
		android:textSize="24sp"
		android:letterSpacing="0.03"
		android:textStyle="bold"
		android:layout_marginHorizontal="10dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/cardView"
		app:layout_constraintTop_toTopOf="parent" />

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/line_separator"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"/>

	<ImageView
		android:visibility="gone"
		android:id="@+id/image_artifact2"
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:scaleType="centerCrop"
		android:src="@drawable/ex_artifact"
		android:background="@drawable/shadow_image_container"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:translationZ="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>