<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.GenshinArtifacts" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/gray_1</item>
		<item name="colorPrimaryVariant">@color/gray_1</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/pink_1</item>
		<item name="colorSecondaryVariant">@color/gray_1</item>
		<item name="colorOnSecondary">@color/black</item>


		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
		<item name="android:windowLightStatusBar">true</item>
		<!-- Customize your theme here. -->

		<item name="fontFamily">@font/montserrat_regular</item>
	</style>

	<style name="Theme.GenshinArtifacts.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.GenshinArtifacts.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="Theme.GenshinArtifacts.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>